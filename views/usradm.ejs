<% layout( 'layout' ) -%>
<div class="wrapper">
    <div class="inner">
        <section>
            <h1 class="major">使用者管理</h1>
            <a href="/usrnew" style="border-bottom: none"><input class="button" type="image" src="/icons/add-tool.svg" style="padding:10px;height:40px" /></a>
            <div class="table-wrapper">
                <table>
                    <thead>
                        <tr>
                            <th>使用者帳號</th>
                            <th>暱稱</th>
                            <th>權限</th>
                            <th>編輯</th>
                            <th>刪除</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach( function(dt) {%>
                        <tr>
                            <td><%= dt.name %></td>
                            <td><%= dt.nick %></td>
                            <td><%= dt.level %></td>
                            <td><a href="/usredit/<%= dt._id %>" style="border-bottom: none"><input class="button" type="image" src="/icons/note-interface-symbol.svg" name="edit" id="edit" style="padding:10px;height:40px" /></a></td>
                            <td><a href="/usrdel/<%= dt._id %>" onclick="return confirm('你確定要刪除此使用者嗎？')" style="border-bottom: none"><input class="button" type="image" src="/icons/rubbish-bin.svg" name="del" id="del" style="padding:10px;height:40px" /></a></td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </section>
    </div>
</div>