<% layout( 'layout' ) -%>
<div class="wrapper spotlight style3">
    <div class="inner" style="display:block; text-align:start">
        <section>
            <h1 class="major">公告管理</h1>
            <!--<a href="/annnew" class="button"><img src="/icons/add-tool.svg" style="border-bottom: none" /></a>-->
            <a href="/annnew" style="border-bottom: none"><input class="button" type="image" src="/icons/add-tool.svg" name="add" id="add" style="padding:10px;height:40px" /></a>
            <!--<button type="submit"><img src="/icons/add-tool.svg" style="border-bottom: none" /><br/>Add</button>-->
            <!--<div class="table-wrapper">-->
            <div>
                <table>
                    <thead>
                        <tr>
                            <th>標題</th>
                            <th>日期</th>
                            <th>發佈者</th>
                            <th>觀看數</th>
                            <th>編輯</th>
                            <th>刪除</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach( function(dt) {%>
                        <tr>
                            <td><a href="/content/<%= dt._id %>"><%= dt.title %></a></td>
                            <td><%= moment(dt.update).format('YYYY-MM-DD HH:mm:ss') %></td>
                            <td><%= dt.populate('author').nick %></td>
                            <td><%= dt.views %></td>
                            <td><a href="/annedit/<%= dt._id %>" style="border-bottom: none"><input class="button" type="image" src="/icons/note-interface-symbol.svg" name="edit" id="edit" style="padding:10px;height:40px" /></a></td>
                            <td><a href="/anndelete/<%= dt._id %>" onclick="return confirm('你確定要刪除此公告嗎？')" style="border-bottom: none"><input class="button" type="image" src="/icons/rubbish-bin.svg" name="del" id="del" style="padding:10px;height:40px" /></a></td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </section>
    </div>
</div>
